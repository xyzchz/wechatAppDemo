.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
	z-index: -1;
  height: 92rpx;
  background: white;
	box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.2);
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-border {
  background-color: white;
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 30rpx;
  height: 30rpx;
	margin-bottom: 10rpx;
}

.tab-bar-item cover-view {
  font-size: 20rpx;
}
